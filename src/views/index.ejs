<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>NodeJS</title>
</head>
<body>
   
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
      </div>
      
      <div style="padding-left:16px">
        <h2>List User</h2>

        <table class="w3-table-all w3-hoverable">
            <thead>
              <tr class="w3-light-grey">
                <td>ID</td>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              

              <% for(let i=0; i < dataUser.length; i++) { %>
                <tr>
                  <td><%= dataUser[i].id %></td>
                  <td><%= dataUser[i].firstName %></td>
                  <td><%= dataUser[i].lastName %></td>
                  <td class="handle">
                    <button><a href="/detail/user/<%= dataUser[i].id %>" target="_blank">Detail</a></button>
                    <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                      <button type="submit">Edit</button>
                    </form>
                    


                    <form action="/delete-user" method="POST">
                      <input type="text" hidden name="userId" value="<%= dataUser[i].id %>"  />
                      <button type="submit">Delete</button>
                    </form>
                    
                  </td>
                </tr>
             <% } %>
            </tbody>
        </table>

        <div class="create-user">
          <form action="/create-new-user" method="POST">
          <h2>Create User : </h2>
          <table class="create-user-table">

            <tr>
              <td>
                <label for="">First Name</label>
              </td>
              <td><input type="text" name="firstName"></td>
            </tr>
            <tr>
              <td>
                <label for="">Last Name</label>
              </td>
              <td><input type="text" name="lastName"></td>
            </tr>
            <tr>
              <td>
                <label for="">Email</label>
              </td>
              <td><input type="email" name="email"></td>
            </tr>
            <tr>
              <td>
                <label for="">Address</label>
              </td>
              <td><input type="text" name="address"></td>
            </tr>
          </table>
          <button type="submit">Submit</button>
        </form>
        </div>
        <p>Some content..</p>
      </div>
    <h1>Hello World from EJS</h1>
    

  
</body>
</html>